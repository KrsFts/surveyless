{
  "space": [2, 4, 8, 16, 32, 64, 128, 256],
  "colors": {
    "active": "#519EF7",
    "inactive": "#A2A9AF",
    "primaryText": "#4F565D",
    "secondaryText": "#a0afba",
    "wash": "#F0F0F0",
    "background": "#FFFFFF"
  },
  "fonts": {
    "heading": "system-ui, sans-serif",
    "regular": "system-ui, sans-serif",
    "mono": "Menlo, monospace"
  },
  "fontSizes": [10, 14, 16, 18, 20, 22, 24, 32],
  "buttons": {
    "primary": {
      "color": "#FFFFFF",
      "backgroundColor": "#519EF7"
    },
    "outline": {
      "color": "#519EF7",
      "backgroundColor": "transparent",
      "boxShadow": "inset 0 0 0 2px"
    }
  },
  "Button": {
    "cursor": "pointer",
    ":hover": {
      "opacity": 0.7
    },
    ":focus": {
      "opacity": 0.7,
      "outline": "none"
    },
    ":disabled": {
      "cursor": "not-allowed",
      "opacity": 0.3
    }
  },
  "Card": {
    ":focus": {
      "borderColor": "#519EF7",
      "opacity": 0.7,
      "outline": "none"
    }
  }
}
